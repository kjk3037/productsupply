<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zq.dao.CustomerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.zq.pojo.Customer">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="address" property="address" />
        <result column="nickname" property="nickname" />
        <result column="email" property="email" />
        <result column="fax" property="fax" />
        <result column="number" property="number" />
        <result column="source" property="source" />
        <result column="attachment" property="attachment" />
        <result column="describe" property="describe" />
        <result column="customer_manager_id" property="customerManagerId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, code, name, address, nickname, email, fax, number, source, attachment, describe, customer_manager_id, create_time, update_time
    </sql>

</mapper>
