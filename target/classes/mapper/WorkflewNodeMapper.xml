<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zq.backstage.dao.WorkflewNodeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.zq.backstage.domain.WorkflewNode">
        <id column="id" property="id" />
        <result column="node_type" property="nodeType" />
        <result column="node_name" property="nodeName" />
        <result column="workflew_id" property="workflewId" />
        <result column="prev_node_id" property="prevNodeId" />
        <result column="next_node_id" property="nextNodeId" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, node_type, node_name, workflew_id, prev_node_id, next_node_id, create_date, update_date
    </sql>

    <select id="getLinkById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select * from workflew_node where  workflew_id =#{workflewId}
    </select>
</mapper>
